doctype html
head
  title Products
  style.
    table{
    color: teal;
    width: 70%;
    padding-left: 50px;
    font-size: 16px;
    }
    th,td{
    border-bottom: 1px solid teal;
    }
    th{
    background-color:  PowderBlue;
    color:white;
    }
center
  h1(style='color: teal') Product List
  form(action='new' method='post')

  br
  br
  table
    tr
      th ID
      th Name
      th Category
      th Description
      th Price   
    each document in documents
      tr
        td  #{document.ID}
        td  #{document.Name}
        td  #{document.Description}
        td  #{document.Price}
        td  #{document.category}
   
form(action='logout' method='post')
